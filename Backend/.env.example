# .env.example - Environment Variables Template
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development
PORT=5000
HOST=0.0.0.0
API_PREFIX=/api

# Application
APP_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Database
MONGODB_URI=mongodb://localhost:27017/fitness_platform
DB_HOST=localhost
DB_PORT=27017
DB_NAME=fitness_platform
DB_USER=
DB_PASS=
DB_AUTH_SOURCE=admin
DB_POOL_SIZE=10
DB_TIMEOUT=5000
SEED_DATABASE=false

# Redis
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=fitness:
REDIS_PUBSUB=true
REDIS_CLUSTER=false
REDIS_CLUSTER_NODES=

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key

# Email Configuration
EMAIL_ENABLED=true
EMAIL_FROM=noreply@fitnessplatform.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# SMS Configuration (Twilio)
SMS_ENABLED=true
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload
UPLOAD_PATH=./uploads
UPLOAD_URL=/uploads
MAX_FILE_SIZE=10485760
MAX_FILES=10
BASE_URL=http://localhost:5000

# Payment Gateway (Stripe)
PAYMENT_PROVIDER=stripe
PAYMENT_CURRENCY=THB
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Payment Gateway (Omise) - Alternative for Thailand
OMISE_SECRET_KEY=skey_test_your-omise-secret-key
OMISE_PUBLIC_KEY=pkey_test_your-omise-public-key

# Tax Configuration
TAX_RATE=0.07
TAX_INCLUDED=false
COMMISSION_RATE=0.15

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Push Notifications
PUSH_NOTIFICATIONS=true

# OneSignal
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_API_KEY=your-onesignal-api-key

# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=your-fcm-sender-id

# Social Login - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Social Login - Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:5000/api/auth/facebook/callback

# Social Login - LINE
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_CALLBACK_URL=http://localhost:5000/api/auth/line/callback

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIRECTORY=./logs
LOG_FILENAME=app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_QUERIES=false

# Error Tracking (Sentry)
SENTRY_ENABLED=false
SENTRY_DSN=https://your-key@sentry.io/your-project-id

# Analytics
GA_ENABLED=false
GA_TRACKING_ID=UA-XXXXXXXXX-X
MIXPANEL_ENABLED=false
MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
FEATURE_REGISTRATION=true
FEATURE_SOCIAL_LOGIN=false
FEATURE_CHAT=true
FEATURE_VIDEO_CALL=true
FEATURE_PAYMENT=true
FEATURE_REVIEWS=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=false

# Maintenance Mode
MAINTENANCE_MODE=false

# Security
TRUST_PROXY=false
BODY_LIMIT=10mb
REQUEST_TIMEOUT=30000

# Development Options
DEBUG_EMAIL=false
MOCK_PAYMENTS=false

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# React App Environment Variables (for frontend)
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
REACT_APP_OMISE_PUBLIC_KEY=pkey_test_your-omise-public-key
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X
REACT_APP_ONESIGNAL_APP_ID=your-onesignal-app-id
